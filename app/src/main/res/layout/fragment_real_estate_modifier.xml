<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addupdate.RealEstateModifier">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_photo_from_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From galery">

            </Button>

            <Button
                android:id="@+id/add_photo_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From camera"
                />


            <ImageView
                android:id="@+id/imageOfGallery"
                android:layout_width="200dp"
                android:layout_height="200dp">

            </ImageView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le type">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le prix">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_surface_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez la surface">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_nbroom_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le nombre de pièces">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez la decription">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>

            <!-- addphot here ... -->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_streetnumber_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le numéro de rue">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_streetname_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le nom de la rue">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_postalcode_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le code postal">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/property_cityname_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le nom de la ville">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- insert PIO here -->

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/property_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/property_state" />

            <!-- date picker in automati not visible -->
            <Button
                android:id="@+id/btn_datein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="open date">

            </Button>

            <!-- date picker  vente automatic adjust not visible-->
            <Button
                android:id="@+id/btn_dateout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="out date">

            </Button>


            <Button
                android:id="@+id/save_btn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:text="@string/title_saveupdate_btn"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>