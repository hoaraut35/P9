<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/realEstateListFragment">

    <fragment
        android:id="@+id/realEstateListFragment"
        android:name="com.openclassrooms.realestatemanager.ui.list.RealEstateListFragment"
        android:label="Real Estate Manager">
        <action
            android:id="@+id/show_item_detail"
            app:destination="@id/realEstateDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/realEstateDetailFragment"
        android:name="com.openclassrooms.realestatemanager.ui.detail.RealEstateDetailFragment"
        android:label="Real Estate Detail"
        tools:layout="@layout/fragment_real_estate_detail">
        <argument
            android:name="real_estate_id"
            android:defaultValue=""
            app:argType="string"/>
        <action
            android:id="@+id/action_realEstateDetailFragment_to_realEstateModifier"
            app:destination="@id/realEstateModifier" />

    </fragment>

    <fragment
        android:id="@+id/realEstateModifier"
        android:name="com.openclassrooms.realestatemanager.ui.addupdate.RealEstateModifier"
        android:label="fragment_real_estate_modifier"
        tools:layout="@layout/fragment_real_estate_modifier" />




    <fragment
        android:id="@+id/searchFragment"
        android:name="com.openclassrooms.realestatemanager.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />


</navigation>